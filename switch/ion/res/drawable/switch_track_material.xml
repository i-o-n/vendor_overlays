<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="fill_horizontal|center" android:start="18.0px" android:end="18.0px">
                <shape android:shape="rectangle">
                    <corners android:radius="18.0px" />
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="5.0px" android:color="?android:attr/colorAccent" />
                    <size android:height="37.0px" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:gravity="fill_horizontal|center" android:start="18.0px" android:end="18.0px">
                <shape android:shape="rectangle">
                    <corners android:radius="18.0px" />
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="5.0px" android:color="?android:attr/textColorSecondary" />
                    <size android:height="37.0px" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
